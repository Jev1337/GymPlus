{% extends "dashboard/base.html.twig" %}

{% block content %}
<div class="content-body default-height" style="min-height: 878px;">
    <div class="container-fluid">
        <div class="page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Equipments</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Maintenance</h4>
                    </div>
                    <div class="card-body">
                    {{ form_start(form, { 'class': 'centered-form'}) }}
                        <div class="form-row">
                            
                        
                            <div class="form-group col-md-4">
                                {{ form_label(form.dateMaintenance) }}
                                {{ form_widget(form.dateMaintenance, {'attr' : {'class' : 'form-control'}}) }}
                                <small class="text-danger">{{ form_errors(form.dateMaintenance) }}</small>
                            </div>
                            <div class="form-group col-md-4">
                                {{ form_label(form.status) }}
                                {{ form_widget(form.status, {'attr' : {'class' : 'form-control'}}) }}
                                <small class="text-danger">{{ form_errors(form.status) }}</small>
                            </div>
                            
                        </div>
                       
                        {{ form_widget(form.submit) }}
                    {{ form_end(form) }}
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}