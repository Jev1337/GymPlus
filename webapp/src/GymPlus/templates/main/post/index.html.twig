{% extends "main/base.html.twig" %}
{% block content %}
    <div class="page-content bg-white" style="margin-top:5rem;">
        <section class="content-inner">
            <div class="container">
                <div class="row justify-content-center gap-5">
                <div class="container d-grid shadow p-3 mb-5 rounded align-items-center" style="width: 50rem; height: 10rem; ">
                {{ form_start(form) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control rounded', 'placeholder': 'Express your thoughts' }}
                    ) }}                         
                                                    
                    <div class="d-grid gap-2 mt-2 d-md-flex justify-content-md-start" style="height: 2.5rem;">
                        {{ form_widget(form.imageFile) }}
                        {{ form_widget(form.post, {'attr': {'class': 'btn h-3 btn-outline-primary rounded'}}
                        ) }}
                                                            
                    </div>
                    {{ form_end(form) }}
                </div>
                
                    <div class="d-flex flex-column align-items-center">
                        {% for post in posts %}
                            <div class="card shadow p-3 rounded" style="width: 30rem;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div class="d-flex gap-3">
                                            <img style="width:3rem; height:3rem; border-radius:50%" src="{{asset('profileuploads/' ~ user.photo)}}" alt="image" />
                                        <div>
                                            <h5 class="card-title">
                                                {{ user.username }}
                                            </h5>
                                            <div class="">
                                                {{ post.date ? post.date|date('Y-m-d') : '' }}
                                            </div>
                                        </div>
                                        </div>
                                        <div class="d-flex gap-3">
                                            <a class="" href="{{ path('update_post', {'id': post.id}) }}">
                                                edit                                                                                   
                                            </a>
                                            <a class="" href="{{ path('delete_post', {'id': post.id}) }}">
                                                delete                                                                                                           
                                            </a>
                                        </div>
                                    </div>
                                    <p class="card-text mt-3">
                                        {{ post.content }}
                                    </p>
                                    <img class="rounded card-img-top" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="image" />
                                    <div class="d-flex justify-content-between pt-3">
                                        <div>
                                        {{post.likes}} likes                                                 
                                        </div>
                                        <div>
                                        {{post.nbComnts}} comnts                                                
                                        </div>
                                    </div>
                                    <div class="container px-4 text-center">
                                        <div class="row gx-5 pt-3">
                                            <div class="col">
                                                <a class="" href="{{ path('getAll_commentaire', {'id': post.id}) }}">
                                                    like
                                                </a>
                                            </div>
                                            <div class="col">
                                                <a class="" href="{{ path('getAll_commentaire', {'id': post.id}) }}">
                                                    comnts
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        {% else %}
                            <a colspan="8">
                                no records found                             
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
