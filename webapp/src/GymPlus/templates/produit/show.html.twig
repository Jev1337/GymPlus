{% extends "main/base.html.twig" %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idproduit</th>
                <td>{{ produit.idproduit }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ produit.categorie }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.photo }}  <img src="{{ asset('images/img_product/' ~ produit.photo) }}" alt="" width="100"> </td>
            </tr>
            <tr>
                <th>Seuil</th>
                <td>{{ produit.seuil }}</td>
            </tr>
            <tr>
                <th>Promo</th>
                <td>{{ produit.promo }}</td>
            </tr>
        </tbody>
    </table>


    {% if videoExists %}
        <h2>Vidéo</h2>
        {# <video controls> #}
        <video controls width="320" height="240">
            <source src="{{ asset(videoUrl) }}" type="video/mp4">
            Votre navigateur ne prend pas en charge la lecture de vidéos.
        </video>
    {% else %}
        <p>
        {# Aucune vidéo n'est associée à cette photo. #}
        </p>
    {% endif %}

<br>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'idproduit': produit.idproduit}) }}">edit</a>

